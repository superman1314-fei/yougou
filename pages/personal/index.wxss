.container{
   overflow: auto;
   height: 100%;
}

.conrrent_hand {
  height: 428rpx;
  background: #ff2d4a;
}

.conrrent_hand {
  display: flex;
  justify-content: center;
  align-items: center;
}

.portrait {
  display: flex;
  flex-direction: column;
}

.conrrent_hand {
  color: #fff;
}

.portrait image {
  height: 136rpx;
  width: 136rpx;
  border-radius: 50%;
  margin: 0 70rpx;
}

.portrait text {
  text-align: center;
  padding-top: 20rpx;
}

.container_zhongjian {
  padding: 0 20rpx;
     /* overflow: auto; */
}

.collection {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  height: 120rpx;
  position: relative;
  top: -15px;
}

.collection_corrent {
  display: flex;
  flex-direction: column;
  font-size: 12px;
  align-items: center;
  color: #a1a1a1;
}

.order {
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 1px solid #e7e7e7;
}

.payment {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  /* padding-top: 40rpx; */
  height: 170rpx; 
}

.payment_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.payment_item text {
  font-size: 12px;
}

.navbar_item_list {
  margin: 20rpx 0;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 15px;

}
.navbar_item_list text{
   padding-left: 20rpx;
}
.arrow {
  width: 8px;
  height: 8px;
  border-right: 1px solid #ccc;
  border-top: 1px solid #ccc;
  transform: rotate(45deg);
  margin-right: 20rpx;
}

.navbar{
  background: #fff;
    padding-left: 20rpx;
}
.navbar_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  
}