.search {
  padding: 20rpx;
  background: #ccc;
}

.search_content {
  height: 61rpx;
  width: 100%;
  background: #fff;
  border-radius: 4px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 20rpx;
}

.search_content image {
  height: 33rpx;
  width: 30rpx;
  color: #bcbbbc;
  padding-right: 13rpx;
}

.tap {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 1px solid #ccc;
}

/* .list{
 width: 100%; 
