.search {
  padding: 20rpx;
  background: #ccc !important;
}


.tap {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border: 1px solid #ccc;
}

/* .list{
 width: 100%; 
} */

.goods_item {
  display: flex;
  /* 可以不用给 */
  justify-content: space-between; 
  padding: 20rpx;
  border: 1px solid #ccc;
}

.goods_item image {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
}

.goods_item_right {
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods_title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price {
  color: red;
}

.price text {
  font-size: 12px;
}
.no_more{
  padding: 20rpx;
  text-align: center;
  background: rgb(187, 255, 0,0.1);
  font-size: 14px;
}
.toTop{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items:center;
  flex-direction: column;
   font-size: 12px;
   position: fixed;
    bottom: 20px;
    right: 20px;
}
.arrow{
  width: 15rpx;
  height: 15rpx;
  border-top: 1px solid #ff2d4a;
  border-left: 1px solid #ff2d4a;
  transform: rotate(45deg);
  
}
