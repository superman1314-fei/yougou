.goods_item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border: 1px solid #ccc;
}

.goods_item image {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;

}
.goods_item_right{
    flex: 1;
    padding-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.goods_title {
   display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.price text{
  font-size: 13px;
  color: red;
}
